apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: http-ingress
  namespace: {{ app_namespace }}
{% if "cert_manager" in k8s_components %}
  annotations:
    kubernetes.io/ingress.class: public
    cert-manager.io/cluster-issuer: {{ cert_issuer }}
{% endif %}
spec:
{% if "cert_manager" in k8s_components %}
  tls:
  - hosts:
    - {{ combine_server_name }}
    secretName: {{ combine_server_name | regex_replace('[\._-]+','-')}}-tls
  ##################
  # TO DO:
  #   Add secrets for NUC certificates
  ##################
{% endif %}
  rules:
  - host: {{ combine_server_name }}
    http:
      paths:
      - backend:
          service:
            name: frontend
            port:
              number: 80
        path: /
        pathType: Prefix
  ##################
  # TO DO:
  #   Add host specs for NUC URLs
  ##################
