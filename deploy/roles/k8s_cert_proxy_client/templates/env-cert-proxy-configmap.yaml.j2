apiVersion: v1
kind: ConfigMap
metadata:
  creationTimestamp: null
  name: {{ proxy_client_attr.env_name }}
  namespace: {{ cert_proxy_namespace }}
data:
  AWS_S3_BUCKET: s3://{{ aws_s3_loc }}/certs
  CERT_SECRET: {{ combine_server_name | regex_replace('[\\._-]+','-') }}-tls
  CERT_NAMESPACE: {{ cert_proxy_namespace }}
  CERT_RENEW_BEFORE: "{{ cert_renew_before }}"
  TEST_URL: https://aws.amazon.com
  VERBOSE: "True"
