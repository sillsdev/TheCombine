{% if combine_backend_env_vars %}
  {%- for item in combine_backend_env_vars %}
    {% if item.value is string or item.value is number %}
      {{ item.key }}={{ item.value }}
    {% elif item.value is iterable and item.value is not mapping and item.value[0] is defined %}
      {{ item.key }}={{ item.value | join(' ') }}
    {% endif %}
  {% endfor %}
{% endif %}
{% if combine_private_env_vars %}
  {% for item in combine_private_env_vars %}
    {% if item.value is string or item.value is number %}
      {{ item.key }}={{ item.value }}
    {% elif item.value is iterable and item.value is not mapping and item.value[0] is defined %}
      {{ item.key }}={{ item.value | join(' ') }}
    {% endif %}
  {% endfor %}
{% endif %}
