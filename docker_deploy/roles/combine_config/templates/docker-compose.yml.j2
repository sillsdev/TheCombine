version: "3.8"
services:
  backend:
{% if combine_pull_images %}
    image: {{ combine_image_backend }}
{% else %}
    build: ./Backend
{% endif %}
    volumes:
      - backend_data:/home/app/.CombineFiles
    expose:
      - 5000
    depends_on:
      - database
    env_file:
      - ./.env.backend
    restart: unless-stopped
  frontend:
{% if combine_pull_images %}
    image: {{ combine_image_frontend }}
{% else %}
    build: .
{% endif %}
    env_file:
      - ./.env.frontend
    volumes:
      - ./nginx/scripts:/usr/share/nginx/html/scripts:ro
      - frontend_ssl_certs:/ssl
      - letsencrypt:/etc/letsencrypt
    ports:
      - 80:80
      - 443:443
    depends_on:
      - backend
    restart: unless-stopped
  database:
    image: mongo:4.2
    volumes:
      - database_data:/data/db
    expose:
      - 27017
    restart: unless-stopped

volumes:
  backend_data:
  frontend_ssl_certs:
  database_data:
  letsencrypt:
