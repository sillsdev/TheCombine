version: "3.8"
services:
  web:
    build: ./Backend
    volumes:
      - backend_data:/root/.CombineFiles
    expose:
      - 80
    depends_on:
      - db
    env_file:
      - ./.env.web
    restart: unless-stopped
  nginx:
    build:
      context: .
      dockerfile: ./prodDockerfile
      args:
        - CAPTCHA_REQUIRED=false
        - CAPTCHA_SITE=6Le6BL0UAAAAAMjSs1nINeB5hqDZ4m3mMg3k67x3
    volumes:
        - ./nginx/conf.d:/etc/nginx/user.conf.d:ro
        - letsencrypt:/etc/letencrypt
    environment:
        CERTBOT_EMAIL: jimgrady.jg@gmail.com
    ports:
      - 80:80
      - 443:443
    depends_on:
      - web
    restart: unless-stopped
  db:
    restart: unless-stopped
    image: mongo:4.2
    volumes:
      - mongo_data:/data/db
    expose:
      - 27017

volumes:
  mongo_data:
  backend_data:
  letsencrypt:
