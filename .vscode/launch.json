{
  // Use IntelliSense to find out which attributes exist for C# debugging
  // Use hover for the description of the existing attributes
  // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Setup localhost (Kubernetes)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/deploy/scripts/kubernetes_setup.py",
      "console": "integratedTerminal",
      "args": [
        "--target",
        "localhost",
        "--image-tag",
        "latest",
        "--kubeconfig",
        "/home/grady/.kube/local/config"
      ]
    },
    {
      "name": "Debug localhost (Kubernetes)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/deploy/scripts/kubernetes_setup.py",
      "console": "integratedTerminal",
      "args": [
        "--target",
        "localhost",
        "--debug",
        "--dry-run",
        "--image-tag",
        "latest",
        "--kubeconfig",
        "/home/grady/.kube/local/config"
      ]
    },
    {
      "name": "Setup NUC2 (Kubernetes)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/deploy/scripts/kubernetes_setup.py",
      "console": "integratedTerminal",
      "args": [
        "--target",
        "nuc2.thecombine.app",
        "--image-tag",
        "0.7.13",
        "--kubeconfig",
        "/home/grady/.kube/nuc2/config"
      ]
    },
    {
      "name": "Debug NUC2 (Kubernetes)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/deploy/scripts/kubernetes_setup.py",
      "console": "integratedTerminal",
      "args": [
        "--target",
        "nuc2.thecombine.app",
        "--debug",
        "--dry-run",
        "--image-tag",
        "0.7.13",
        "--kubeconfig",
        "/home/grady/.kube/nuc2/config"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/Backend/bin/Debug/net5.0/BackendFramework.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Backend",
      "stopAtEntry": false,
      "launchBrowser": {
        "enabled": true
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Debug Jest Tests",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
