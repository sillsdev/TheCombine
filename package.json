    "js-base64": "~3.7.7",
    "levenshtein-search": "~0.1.2",
    "material-react-table": "~3.2.1",
    "motion": "~12.23.24",
    "mui-language-picker": "~2.5.2",
    "notistack": "~3.0.2",
    "nspell": "~2.1.5",
    "punycode": "~2.3.1",
    "react": "~18.3.1",
