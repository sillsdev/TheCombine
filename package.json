{
  "name": "thecombine",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predatabase": "tsc setupMongo.ts && node setupMongo.js",
    "database": "mongod --dbpath=./mongo_database",
    "drop-database": "tsc dropDB.ts && node dropDB.js",
    "set-admin-user": "tsc setAdminUser.ts && node setAdminUser.js",
    "frontend": "react-scripts start",
    "start": "npm install && npm-run-all --parallel frontend database api",
    "api": "dotnet run --project Backend/BackendFramework.csproj",
    "dotnet-format": "dotnet-format",
    "dotnet-format-check": "dotnet-format --check",
    "build": "react-scripts build",
    "test": "dotnet test Backend.Tests/Backend.Tests.csproj && react-scripts test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "lint": "eslint --ext js,ts,tsx,jsx src",
    "test:ci": "dotnet test Backend.Tests/Backend.Tests.csproj && CI=true react-scripts test --ci --all --testResultsProcessor jest-teamcity-reporter",
    "coverage": "dotnet test Backend.Tests/Backend.Tests.csproj /p:CollectCoverage=true /p:CoverletOutputFormat=lcov && react-scripts test --coverage --watchAll=false",
    "gen-backend-coverage-report": "tsc genBackendCoverageReport.ts && node genBackendCoverageReport.js",
    "eject": "react-scripts eject",
    "prettier": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "prettier-check": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,json}\""
  },
  "dependencies": {
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.10.0",
    "@matt-block/react-recaptcha-v2": "^1.0.6",
    "axios": "^0.19.2",
    "dictionary-en-us": "^2.1.1",
    "make-dir": "^3.1.0",
    "material-table": "^1.62.0",
    "nspell": "^2.1.2",
    "react": "^16.13.1",
    "react-beautiful-dnd": "^11.0.4",
    "react-dom": "^16.13.1",
    "react-localize-redux": "^3.5.3",
    "react-modal": "^3.11.2",
    "react-redux": "^7.2.0",
    "react-reveal": "^1.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-toastify": "^6.0.5",
    "recordrtc": "^5.6.1",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "validator": "^13.1.1"
  },
  "eslintConfig": {
    "extends": "react-app",
    "env": {
      "jest": true
    },
    "rules": {
      "no-undef": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.2",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-test-renderer": "^16.9.2",
    "@types/redux-mock-store": "^1.0.2",
    "@types/redux-thunk": "^2.1.0",
    "@types/react-modal": "^3.10.5",
    "@types/validator": "^13.0.0",
    "jest-teamcity-reporter": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "react-test-renderer": "^16.13.1",
    "redux-mock-store": "^1.5.4",
    "typescript": "^3.7.5"
  }
}
